@model Ejemplo_Clase3.web.Models.Personas

@{
    ViewBag.Title = Ejemplo_Clase3.web.Recursos.Etiquetas.Botones_Crear;
}

<h2>@Ejemplo_Clase3.web.Recursos.Etiquetas.Personas_Titulo</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
